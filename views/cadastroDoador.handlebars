<title>Cadastro Doador</title>
<div class="container" >
<br><br>
  <br>
<h2>Cadastro Doador</h2>
	<form action="/cadDoador" method="POST">
    	<div class="form-row">
			<div class="form-group col-md-6">
				<input type="text"  class="form-control" placeholder="Nome Completo" name="nome">
			</div>
			<div class="form-group col-md-6">
				<input type="number" class="form-control" placeholder="Cpf/Cnpj" name="cpfcnpj">
			</div>
		</div>

		<div class="form-row">
			<div class="form-group col-md-8">
          		<input type="text" class="form-control" placeholder="Endereço" name="endereco">
        	</div>
			<div class="form-group col-md-4">
				<input type="number"  class="form-control" placeholder="Número" name="numero">
			</div>
		</div>

		<div class="form-row">
			<div class="form-group col-md-4">
          		<input type="text" class="form-control" placeholder="Bairro" name="bairro">
        	</div>
			<div class="form-group col-md-4">
				<input type="text"  class="form-control" placeholder="Cidade" name="cidade">
			</div>
			<div class="form-group col-md-4">
				<input type="text"  class="form-control" placeholder="Estado" name="estado">
			</div>
		</div>

		<div class="form-row">
			<div class="form-group col-md-6">
          		<input type="email" class="form-control"  id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="E-mail -- name@example.com" name="email">
        	</div>
        	<div class="form-group col-md-6">
				<input type="number"  class="form-control" placeholder="Número Whatszapp" name="whatszapp">
			</div>
		</div>
		<div class="form-row">
			<div class="form-group form-check">
				<input type="checkbox" class="form-check-input" id="exampleCheck1" name="notificacao">
					<label class="form-check-label" for="exampleCheck1">Receber notificações de Doações</label>
			</div>
<br>	</div>
      	<div class="form-row">
			<div class="form-group ">
				<button type="submit" class="btn btn-primary botao">Cadastrar</button>
			</div>
		</div>
			
	</form>
			

		<br><br><br><br><br>
		<table class="table" >
    <tr>
        <th>Nome</th>
        <th>E-mail</th>
    </tr>
    {{#each doador}}
    
         <tr>
             <td>{{nome}}</td>
             <td>{{email}}</td>
             <td><a href="/updateDoador/{{id}}" class="btn btn-warning">Editar</a></td>

			 <form method="POST" action="/deleteDoador" style="display : inline;" onsubmit="confirmarDelecao(event, this)"> 
                <input type="hidden" name="id" value="{{id}}">
                <td><button class="btn btn-danger" >Excluir</button></td>
              </form>
         </tr>
    {{/each}}
    </table>

	<br>
	<br>
	<br>
  </div>
  <script>
  function confirmarDelecao(event, form){
    event.preventDefault();
    var decision = confirm("Tem certeza que deseja excluir?")
    if(decision){
      form.submit();
    }
  }
</script>
	
